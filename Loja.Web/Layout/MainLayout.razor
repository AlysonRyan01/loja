@inherits MainLayoutPage

<MudThemeProvider Theme="WebConfiguration.theme"/>
<MudSnackbarProvider/>
<MudDialogProvider/>

<body>
<header class="cabecalho">
    <div class="logo">
        <NavLink href="/" class="nav-link">
            <img class="logo" src="images/TVS%20ELETRÔNICA-Photoroom.png" alt="">
        </NavLink>
    </div>

    <div class="pesquisa">
        <MudTextField @bind-Value="SearchTerm"
                      Placeholder="Filtrar..."
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      Immediate="true" IconSize="Size.Medium" class="campo-busca">
        </MudTextField>
    </div>

    <MudDrawerContainer Class="mud-height-full">
        <MudDrawer @bind-Open="@_openEnd" Width="300px" Fixed="false" Anchor="Anchor.End" Elevation="0" Variant="@DrawerVariant.Persistent">
            <MudDrawerHeader Style="display: flex; align-items: center; justify-content: start">
                <MudButton StartIcon="@Icons.Material.Filled.Close" IconSize="Size.Large" Color="Color.Primary" Variant="Variant.Text" OnClick="@ToggleEndDrawer"/>
                <MudText Typo="Typo.h6">Menu</MudText>
            </MudDrawerHeader>
            <MudNavMenu>
                <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.AccountBox">
                    @if (_userLoggedIn)
                    {
                        <h3>@_userName</h3>
                    }
                    else
                    {
                        <NavLink href="/entrar">Entrar</NavLink>
                    }
                </MudNavLink>
                <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.ShoppingCart">Orders</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.History">Order History</MudNavLink>
            </MudNavMenu>
        </MudDrawer>
        <div class="d-flex justify-center align-center mud-height-full carrinho-hamburger" >
            <MudButton Color="Color.Primary" Variant="Variant.Text" OnClick="@ToggleEndDrawer">
                <img class="hamburger-imagem" src="images/icons8-cardápio-144.png" alt="menu" width="30px" />
            </MudButton>
            <NavLink href="/carrinho" class="nav-link">
                <img class="carrinho-imagem" src="images/shopping-cart.png" alt="carrinho" width="40px" />
            </NavLink>
        </div>
    </MudDrawerContainer>

</header>

<main>
    @Body
</main>

<footer class="footer">
    <div class="footer-content">
        <div class="footer-logo">
            <h2>TVS ELETRÔNICA</h2>
            <p>Qualidade e inovação para você.</p>
        </div>

        <div class="footer-links">
            <h3>Links Rápidos</h3>
            <ul>
                <li><a href="#">Início</a></li>
                <li><a href="#">Sobre</a></li>
                <li><a href="#">Serviços</a></li>
                <li><a href="#">Contato</a></li>
            </ul>
        </div>

        <div class="footer-social">
            <h3>Redes Sociais</h3>
            <div class="social-icons">
                <a href="#"><img src="images/facebook.png" alt="Facebook"></a>
                <a href="#"><img src="images/twitter.png" alt="Twitter"></a>
                <a href="#"><img src="images/instagram.png" alt="Instagram"></a>
            </div>
        </div>
    </div>

    <div class="footer-bottom">
        <p>&copy; 2025 TVS ELETRÔNICA - Todos os direitos reservados.</p>
    </div>
</footer>
</body>
