@page "/login"
@layout LoginLayout

<PageTitle>TVS - Entrar</PageTitle>

<MudGrid Justify="Justify.Center" >
    <MudItem xs="12" sm="12" md="10" lg="10" xl="10" xxl="10">
        <MudPaper Class="mud-width-full pa-0 d-flex" Style="border-radius: 8px; overflow: hidden;" Elevation="12">
            <MudItem xs="12" sm="5" Style="background-color: #bf0603; text-align: center" Class="pa-16 d-flex justify-center align-center flex-column">
                <h1 style="margin-bottom: 0.5em">Bem-vindo de volta!</h1>
                <p style="margin-bottom: 1em">Para manter-se conectado conosco, faça login com suas informações pessoais</p>
                <MudButton Variant="Variant.Outlined" Color="Color.Default">Entrar</MudButton>
            </MudItem>

            <MudItem xs="12" sm="7" Style="text-align: center" Class="pa-16 d-flex justify-center align-center flex-column">
                <h1 style="color: #bf0603">Criar Conta</h1>
            </MudItem>
        </MudPaper>
    </MudItem>
</MudGrid>
